<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/common_title"/>

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_login_number"
            android:layout_height="wrap_content"
            android:layout_width="95dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="手机号:"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_login_number"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="phone"
            android:hint="请输入手机号"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tv_login_number"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="?android:listDivider"/>

    <RelativeLayout
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:paddingRight="17dp"
        android:paddingLeft="17dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_login_pwd"
            android:layout_height="wrap_content"
            android:layout_width="95dp"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="密码:"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="#5c5c5c"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:layout_toRightOf="@id/tv_login_pwd"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="?android:listDivider"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/btn_01"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="登　录"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

</LinearLayout>